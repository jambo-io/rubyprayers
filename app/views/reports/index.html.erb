<p id="notice"><%= notice %></p>

<h1>Relatórios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>De...</th>
      <th>...Até</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.name %></td>
        <td><%= report.start_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= report.end_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= link_to 'Ver', report %></td>
        <td><%= link_to 'Editar', edit_report_path(report) %></td>
        <td><%= link_to 'Destruir', report, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Relatório', new_report_path, class: 'd-print-none' %>
